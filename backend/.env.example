# Example .env file for Live SOP Interpreter

# Required API Keys
GROQ_API_KEY=your_groq_api_key_here

# Database Configuration
VECTOR_DB_PATH=./vector_db
UPLOAD_DIR=./uploads

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS Configuration  
FRONTEND_URL=http://localhost:5173

# Open Source Voice Configuration
TTS_VOICE=en
STT_MODEL=base

# Document Processing
MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=.pdf,.docx,.md,.txt

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
EMBEDDING_MODEL=all-MiniLM-L6-v2
MAX_SEARCH_RESULTS=5

# LLM Configuration
LLM_MODEL=llama3-8b-8192
MAX_TOKENS=1000
TEMPERATURE=0.3
